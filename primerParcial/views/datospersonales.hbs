<table>
    <tr>
        <th>Primer Nombre</th>
        <td>{{primerNombre}}</td>
    </tr>
    <tr>
        <th>Segundo Nombre</th>
        <td>{{segundoNombre}}</td>
    </tr>
    <tr>
        <th>
            Apellidos
        </th>
        <td>
            {{apellidos}}
        </td>
    </tr>
    <tr>
        <th>
            Nombre Completo
        </th>
        <td>
            {{primerNombre}} {{segundoNombre}} {{apellidos}}
        </td>
    </tr>
    <tr>
        <th>
            Correo Electrónico
        </th>
        <td>
            {{email}}
        </td>
    </tr>
    <tr>
        <th>
            Género
        </th>
        <td>
            {{genero}}
        </td>
    </tr>
    <tr>
        <th>
            Direcciíon
        </th>
        <td>
            {{direccion}}
        </td>
    </tr>
    <tr>
        <th>
            Profesión
        </th>
        <td>
            {{profesion}}
        </td>
    </tr>
    <tr>
        <th>Roles</th>
        <td>
            <ul>
                {{#each roles}}
                <li>
                    {{rol}}
                </li>
                {{/each}}
            </ul>
        </td>
    </tr>
</table>
